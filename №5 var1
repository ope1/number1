#include <iostream>
#include <fstream>
#include <locale.h>
using namespace std;
int main (void) 
{   setlocale (LC_ALL, "RUS");
	char c;
	int k,i;
	const char*a="АБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ";
	const char*b="ABVGDEYJZIYKLMNOPRSTUFHLCSLlbbEYY";
	const char*p="000000O0000000000000000LHHLbl00UA";
	const char*q="00000000000000000000000000L000000";
	ifstream f;
	f.open("C:\\Users\\ALEX\\Desktop\\f.txt");
	ofstream g;
	g.open("C:\\Users\\ALEX\\Desktop\\g.txt");
	while (!f.eof())
	{
		f.get(c);
		if (f==NULL)
		return 0;
		k=0;
		for (i=0;(i < 33)&&(k == 0);i++)
			if (c == a[i])
				k=1;      
		if (k == 1)
		{
			if (b[i-1]!='0') 
				g << b[i-1];
			if (p[i-1]!='0') 
				g << p[i-1];
			if (q[i-1]!='0') 
				g << q[i-1];
		}
		else g << c;
	}
    f.close();
	g.close();
	return 0;
}
